<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TabStyle1" parent="Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabMinWidth">72dp</item>
        <item name="tabMaxWidth">72dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">#FF6C00</item>
    </style>

    <style name="TabStyle2" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">#FF6C00</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">#FF6C00</item>
    </style>

</resources>
